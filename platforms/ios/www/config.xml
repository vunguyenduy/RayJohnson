    <gap:splash src="img/splash/RayJohnson-splash-640x960.jpg" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="img/splash/RayJohnson-splash-640x960.jpg" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="img/splash/RayJohnson-splash-1536x2008.jpg" gap:platform="android" gap:density="hdpi" />
