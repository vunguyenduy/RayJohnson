<?xml version='1.0' encoding='utf-8'?>
<widget id="com.RayJohnson.ceo" xmlns:gap="http://phonegap.com/ns/1.0" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Ray Johnson</name>
    <preference name="orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <description>
        Senior Vice-President and Chief Technology Officer
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    
    <icon src="img/icons/RayJohnson-icon-57.png" />
    
    <icon src="img/icons/RayJohnson-icon-57.png" gap:platform="ios" width="57" height="57" />
    <icon src="img/icons/RayJohnson-icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="img/icons/RayJohnson-icon-114.png" gap:platform="ios" width="114" height="114" />
    
    <icon src="img/icons/android/RayJohnson-icon-63.png" gap:platform="android" gap:density="ldpi" />
    <icon src="img/icons/android/RayJohnson-icon-63.png" gap:platform="android" gap:density="mdpi" />
    <icon src="img/icons/android/RayJohnson-icon-94.png" gap:platform="android" gap:density="hdpi" />
    <icon src="img/icons/android/RayJohnson-icon-125.png" gap:platform="android" gap:density="xhdpi" />
    
    <gap:splash src="img/splash/RayJohnson-splash-320x480.jpg" />
    
    <gap:splash src="img/splash/RayJohnson-splash-320x480.jpg" gap:platform="ios" width="320" height="480" />
    <gap:splash src="img/splash/RayJohnson-splash-640x960.jpg" gap:platform="ios" width="640" height="960" />
    <gap:splash src="img/splash/RayJohnson-splash-640x1136.jpg" gap:platform="ios" width="640" height="1136" />
